{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}

	<!-- Data table css -->
	<link href="{{ asset('assets/plugins/datatable/css/dataTables.bootstrap5.css') }}" rel="stylesheet"/>
	<link href="{{ asset('assets/plugins/datatable/css/buttons.bootstrap5.min.css') }}" rel="stylesheet">
	<link 	href="{{ asset('assets/plugins/datatable/responsive.bootstrap5.css') }}" rel="stylesheet"/>
	 
	<!-- WYSIWYG Editor css -->	
    <link href="{{ asset('assets/plugins/quill/quill.snow.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/plugins/quill/quill.bubble.css') }}" rel="stylesheet">

	<link href="{{ asset('assets/plugins/wysiwyag/richtext.css') }}" rel="stylesheet"/>
	<style>
		.hide-me {
			display: none;
		}
	</style>
{% endblock %}
{% block mainContent %}
	<body
		class="app sidebar-mini light-mode default-sidebar">

		<!---Global-loader-->
		<div id="global-loader">
			<img src="https://spruko.com/demo/django/dashtic/DASHTIC/assets/images/svgs/loader.svg" alt="loader">
		</div>

		<div class="page">
			<div
				class="page-main">

				<!--aside open-->
				{% block sidenav %}
					{{ parent() }}
				{% endblock %}
				<!--aside closed-->

				<div class="app-content main-content">
					<div
						class="side-app">

						<!--app header-->
						{% block topnav %}
							{{ parent() }}
						{% endblock %}
						<!--/app header-->

						<!--Row-->
						<div class="row">
							<div
								class="side-app">

								<!--Page header-->
								<div class="page-header">
									<div class="page-leftheader">
										<h4 class="page-title">{{page_name}}</h4>
									</div>
									<div class="page-rightheader ms-auto d-lg-flex d-none">
										<ol class="breadcrumb">
											<li class="breadcrumb-item">
												<a href="/admin-dash" class="d-flex">
													<svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewbox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3zm5 15h-2v-6H9v6H7v-7.81l5-4.5 5 4.5V18z"/><path d="M7 10.19V18h2v-6h6v6h2v-7.81l-5-4.5z" opacity=".3"/></svg>
													<span class="breadcrumb-icon">
														Home</span>
												</a>
											</li>
											<li class="breadcrumb-item">
												<a href="javascript:void(0)">{{page_name}}</a>
											</li>
										</ol>
									</div>
								</div>
								<!--End Page header-->

								<!-- Row -->
								<div class="row">
									<div
										class="col-xl-12 col-lg-12 col-md-12">
										<!--div-->
										<div class="card">
											<div class="card-header">
												<div class="card-title">{{page_description}}</div>
											</div>
											<div class="card-body">
												<div class="table-responsive">
													<table class="table table-bordered text-nowrap" id="result-table">
														<thead>
															<tr>
																<th class="wd-15p border-bottom-0">Product</th>
																<th class="wd-25p border-bottom-0">Renewal Frequency</th>
																<th class="wd-25p border-bottom-0">Cover Start Date</th>
																<th class="wd-25p border-bottom-0">Cover End Date</th>
																<th class="wd-25p border-bottom-0">Action</th>
															</tr>
														</thead>
														<tbody></tbody>
													</table>
												</div>
											</div>
										</div>
										<!--/div-->
									</div>
								</div>
							</div>
						</div>

					</div>
				</div>
				<!-- end app-content-->
			</div>

			<!--Footer-->

			<!-- End Footer-->

		</div>

		<!-- Back to top -->
		<a href="#top" id="back-to-top">
			<svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewbox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"/></svg>
		</a>


		<div class="modal fade" id="new-product" aria-hidden="true" style="display: none;">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content modal-content-demo">
					<div class="modal-header">
						<h6 class="modal-title">Product</h6>
						<button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button">
							<span aria-hidden="true">×</span>
						</button>
					</div>
					<form id="prod-form">
					<input type="hidden" id="update_record_id">
						<div class="modal-body">
							<h6>Enter Product Details</h6>
							<div class="row">
								<div class="col-md-12">
									<div class="removeMessages-modal"></div>
									<div class="ajaxloader-modal"></div>
								</div>
							</div>
							<div class="mb-4">
								<div class="progress progress-md mb-3 hide-me bot-load-modal">
									<div class="progress-bar progress-bar-indeterminate bg-cyan"></div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-12">
									<div class="mb-3">
										<label class="form-label">Product Name</label>
										<input id="product-name" type="text" class="form-control" placeholder="Product Name">
									</div>
								</div>
								<div class="col-md-12">
									<div class="mb-3">
										<label class="form-label">Product Type</label>
										<select id="status-select" class="form-control"></select>
									</div>
								</div>
								<div class="col-sm-12 col-md-12">
									<div class="mb-3">
										<label class="form-label">Description<small></small>
										</label>
										<div class="ql-wrapper ql-wrapper-modal ht-250">
											<div class="flex-1" id="description">
												<p>Enter description</p>																					
											</div>
										</div>
									</div>
								</div>
								<div class="col-md-12">
									<div class="mb-3">
										<label class="form-label">Icon</label>
										<div action="" class="dropzone col-md-12" id="my-awesome-dropzone" name="my-awesome-dropzone"></div>
									</div>
								</div>

								
							</div>

						</div>
						<div class="modal-footer">
							<button id="form-submitter-modal" class="btn btn-indigo" type="submit">Save</button>
							<button class="btn btn-light" data-bs-dismiss="modal" type="button">Close</button>
						</div>
					</form>
				</div>
			</div>
		</div>


		<div class="modal fade" id="product-preview" aria-hidden="true" style="display: none;">
			<div class="modal-dialog" role="document">
				<div class="modal-content modal-content-demo">
					<div class="modal-header">
						<h6 class="modal-title">Product Preview</h6>
						<button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button">
							<span aria-hidden="true">×</span>
						</button>
					</div>
					<form id="bank-form-update">
						<div class="modal-body">
							<h6><span id="prod-name"></span> Details</h6>
							<div class="row">
								<div class="col-md-12">
									<div class="removeMessages-modal"></div>
									<div class="ajaxloader-modal"></div>
								</div>
							</div>
							<div class="mb-4">
								<div class="progress progress-md mb-3 hide-me bot-load-modal">
									<div class="progress-bar progress-bar-indeterminate bg-cyan"></div>
								</div>
							</div>
							<div class="row">
							<div class="widget-user-image mx-auto mt-5 text-center"><img id="prod-img" alt="Product Avatar" class="rounded-circle  putMyPicHere" src="../{{ asset('assets/images/users/16.jpg')}}"></div>
											
								<div class="col-sm-12 col-md-12">
									<input type="hidden" id="bank-id-up">
									<div class="mb-3">
										<label class="form-label">Product Name</label>
										<span class="black-text" id="vw-prod-name"></span>
									</div>
								</div>
								<div class="col-sm-12 col-md-12">
									<input type="hidden" id="bank-id-up">
									<div class="mb-3">
										<label class="form-label">Product Type</label>
										<span class="black-text" id="vw-product_type_name"></span>
									</div>
								</div>
								<div class="col-sm-12 col-md-12">
									<div class="mb-3">
										<label class="form-label">Product Description</label>
										<div class="black-text" id="vw-prod-description"></div>
									</div>
								</div>
								
							</div>

						</div>
						<div class="modal-footer">
							<button id="form-submitter-update-modal" class="btn btn-indigo" type="submit">Update</button>
							<button class="btn btn-light" data-bs-dismiss="modal" type="button">Close</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	{% endblock %}
