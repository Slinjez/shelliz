{% extends "layouts/portallayout.html.twig" %}

{% block head %}
	{{ parent() }}
	<style>
		.hide-me {
			display: none;
		}
	</style>
{% endblock %}
{% block mainContent %}
	<body
		class="app sidebar-mini light-mode default-sidebar">

		<!---Global-loader-->
		<div id="global-loader">
			<img src="https://spruko.com/demo/django/dashtic/DASHTIC/assets/images/svgs/loader.svg" alt="loader">
		</div>

		<div class="page">
			<div
				class="page-main">

				<!--aside open-->
				{% block sidenav %}
					{{ parent() }}
				{% endblock %}
				<!--aside closed-->

				<div class="app-content main-content">
					<div
						class="side-app">

						<!--app header-->
						{% block topnav %}
							{{ parent() }}
						{% endblock %}
						<!--/app header-->

						<!--Row-->
						<div class="row">
							<div
								class="side-app">

								<!--Page header-->
								<div class="page-header">
									<div class="page-leftheader">
										<h4 class="page-title">{{page_name}}</h4>
									</div>
									<div class="page-rightheader ms-auto d-lg-flex d-none">
										<ol class="breadcrumb">
											<li class="breadcrumb-item">
												<a href="/client-dash" class="d-flex">
													<svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewbox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3zm5 15h-2v-6H9v6H7v-7.81l5-4.5 5 4.5V18z"/><path d="M7 10.19V18h2v-6h6v6h2v-7.81l-5-4.5z" opacity=".3"/></svg>
													<span class="breadcrumb-icon">
														Home</span>
												</a>
											</li>
											<li class="breadcrumb-item">
												<a href="javascript:void(0)">{{page_name}}</a>
											</li>
										</ol>
									</div>
								</div>
								<!--End Page header-->

								<!-- Row -->
								<div class="row">
									<div class="col-xl-4 col-lg-4 col-md-12">
										<div class="card box-widget widget-user">
											<div class="widget-user-image mx-auto mt-5 text-center"><img alt="User Avatar" class="rounded-circle rounded-circle-profile-force putMyPicHere" src="../{{ asset('assets/images/users/16.jpg')}}"></div>
											<div class="card-body text-center">
												<div class="pro-user">
													<h4 class="pro-user-username text-dark mb-1 font-weight-bold portal-user-name"></h4>
													<h6 class="pro-user-desc text-muted">***</h6>
													<a href="/client-vw-edit-profile" class="btn btn-primary btn-block btn-sm mt-3">Edit Profile</a>
												</div>
											</div>
										</div>
										<div class="card">
											<div class="card-body">
												<h4 class="card-title">Personal Details</h4>
												<div class="table-responsive table-responsive-ignore-overflow">
													<table class="table mb-0">
														<tbody>
															<tr>
																<td class="py-2 px-0">
																	<span class="font-weight-semibold w-50">Name
																	</span>
																</td>
																<td class="py-2 px-0 ">
																	<span id="client-full-name"></span>
																</td>
															</tr>
															<tr>
																<td class="py-2 px-0">
																	<span class="font-weight-semibold w-50">Id Number
																	</span>
																</td>
																<td class="py-2 px-0 ">
																	<span id="portal-id-no"></span>
																</td>
															</tr>
															<tr>
																<td class="py-2 px-0">
																	<span class="font-weight-semibold w-50">PIN Number
																	</span>
																</td>
																<td class="py-2 px-0 ">
																	<span id="portal-pin-no"></span>
																</td>
															</tr>
														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
									<div class="col-xl-8 col-lg-8 col-md-12">
										<div
											class="main-content-body main-content-body-profile card mg-b-20">
											<!-- main-profile-body -->
											<div class="main-profile-body">
												<div class="tab-content">
													<div class="tab-pane show active" id="about">
														<div class="card-body border-top">
															<h5 class="font-weight-bold hide-me">KYC Details</h5>
															<a class="btn btn-sm btn-white mt-1 hide-me" href="javascript:void(0)">HTML5</a>
														</div>
														<div class="card-body border-top">
															<h5 class="font-weight-bold">Contact</h5>
															<div class="main-profile-contact-list d-lg-flex">
																<div class="media col-md-6">
																	<div class="media-icon bg-primary-transparent text-primary me-3 mt-1">
																		<i class="fa fa-phone"></i>
																	</div>
																	<div class="media-body">
																		<small class="text-muted">Mobile</small>
																		<div id="client-phone" class="font-weight-bold"></div>
																	</div>
																</div>
																<div class="media col-md-6">
																	<div class="media-icon bg-primary-transparent text-primary me-3 mt-1">
																		<i class="fa fa-slack"></i>
																	</div>
																	<div class="media-body">
																		<small class="text-muted">Email</small>
																		<div id="client-email" class="font-weight-bold"></div>
																	</div>
																</div>
															</div>
															<!-- main-profile-contact-list -->
														</div>
														<div class="card-body">
															<h5 class="font-weight-bold">Location Details</h5>
															<div class="main-profile-bio mb-0">
																<div class="main-profile-contact-list d-lg-flex">
																	<div class="media col-md-4">
																		<div class="media-icon bg-primary-transparent text-primary me-3 mt-1">
																			<i class="fas fa-map-marker-alt"></i>
																		</div>
																		<div class="media-body">
																			<small class="text-muted">Address</small>
																			<div id="loc-address" class="font-weight-bold"></div>
																		</div>
																	</div>
																	<div class="media col-md-4">
																		<div class="media-icon bg-primary-transparent text-primary me-3 mt-1">
																			<i class="fas fa-map-marker-alt"></i>
																		</div>
																		<div class="media-body">
																			<small class="text-muted">City</small>
																			<div id="loc-city" class="font-weight-bold"></div>
																		</div>
																	</div>
																	<div class="media col-md-4">
																		<div class="media-icon bg-primary-transparent text-primary me-3 mt-1">
																			<i class="fas fa-map-marker-alt"></i>
																		</div>
																		<div class="media-body">
																			<small class="text-muted">Country</small>
																			<div id="loc-country" class="font-weight-bold"></div>
																		</div>
																	</div>
																</div>
															</div>
														</div>
														<div class="card-body">
															<h5 class="font-weight-bold">Bank Details</h5>
															<div class="main-profile-bio mb-0">
																<div class="table-responsive">
																	<table class="table table-hover card-table table-vcenter text-nowrap mb-0">
																		<thead>
																			<tr>
																				<th>Bank</th>
																				<th>Branch</th>
																				<th>Account Number</th>
																				<th>Status</th>
																				<th>Action</th>
																			</tr>
																		</thead>
																		<tbody id="bank-table-body">
																			<tr>
																				<th scope="row">-</th>
																				<td>-</td>
																				<td>-</td>
																				<td>-</td>
																				<td>-</td>
																			</tr>
																		</tbody>
																	</table>
																</div>

															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>
				</div>
				<!-- end app-content-->
			</div>

			<!--Footer-->

			<!-- End Footer-->

		</div>

		<!-- Back to top -->
		<a href="#top" id="back-to-top">
			<svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" height="24" viewbox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z"/></svg>
		</a>


		<div class="modal fade" id="new-bank" aria-hidden="true" style="display: none;">
			<div class="modal-dialog" role="document">
				<div class="modal-content modal-content-demo">
					<div class="modal-header">
						<h6 class="modal-title">New Bank</h6>
						<button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button">
							<span aria-hidden="true">×</span>
						</button>
					</div>
					<form id="bank-form">
						<div class="modal-body">
							<h6>Enter Bank Details</h6>
							<div class="row">
								<div class="col-md-12">
									<div class="removeMessages-modal"></div>
									<div class="ajaxloader-modal"></div>
								</div>
							</div>
							<div class="mb-4">
								<div class="progress progress-md mb-3 hide-me bot-load-modal">
									<div class="progress-bar progress-bar-indeterminate bg-cyan"></div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-12">
									<div class="mb-3">
										<label class="form-label">Bank Name</label>
										<input id="bank-name" type="text" class="form-control" placeholder="Bank Name">
									</div>
								</div>
								<div class="col-md-6">
									<div class="mb-3">
										<label class="form-label">Bank Branch</label>
										<input id="bank-branch" type="text" class="form-control" placeholder="Branch">
									</div>
								</div>
								<div class="col-sm-6 col-md-6">
									<div class="mb-3">
										<label class="form-label">Account Number<small></small>
										</label>
										<input id="account-number" type="number" class="form-control" placeholder="Number">
									</div>
								</div>
							</div>

						</div>
						<div class="modal-footer">
							<button id="form-submitter-modal" class="btn btn-indigo" type="submit">Save</button>
							<button class="btn btn-light" data-bs-dismiss="modal" type="button">Close</button>
						</div>
					</form>
                </div>
			</div>
		</div>

        
		<div class="modal fade" id="bank-preview" aria-hidden="true" style="display: none;">
			<div class="modal-dialog" role="document">
				<div class="modal-content modal-content-demo">
					<div class="modal-header">
						<h6 class="modal-title">Bank Preview</h6>
						<button aria-label="Close" class="btn-close" data-bs-dismiss="modal" type="button">
							<span aria-hidden="true">×</span>
						</button>
					</div>
					<form id="bank-form-update">
						<div class="modal-body">
							<h6>Acc. (<span id="title-bank-name"></span>) Details</h6>
							<div class="row">
								<div class="col-md-12">
									<div class="removeMessages-modal"></div>
									<div class="ajaxloader-modal"></div>
								</div>
							</div>
							<div class="mb-4">
								<div class="progress progress-md mb-3 hide-me bot-load-modal">
									<div class="progress-bar progress-bar-indeterminate bg-cyan"></div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12 col-md-12">
                                <input type="hidden" id="bank-id-up">
									<div class="mb-3">
										<label class="form-label">Bank Name</label>
										<input id="bank-name-up" type="text" class="form-control" placeholder="Bank Name">
									</div>
								</div>
								<div class="col-md-6">
									<div class="mb-3">
										<label class="form-label">Bank Branch</label>
										<input id="bank-branch-up" type="text" class="form-control" placeholder="Branch">
									</div>
								</div>
								<div class="col-sm-6 col-md-6">
									<div class="mb-3">
										<label class="form-label">Account Number<small></small>
										</label>
										<input id="account-number-up" type="number" class="form-control" placeholder="Number">
									</div>
								</div>
							</div>

						</div>
						<div class="modal-footer">
							<button id="form-submitter-update-modal" class="btn btn-indigo" type="submit">Update</button>
							<button class="btn btn-light" data-bs-dismiss="modal" type="button">Close</button>
						</div>
					</form>
                </div>
			</div>
		</div>
	{% endblock %}
	{% block pageScripts %}

		<!-- function js-->
		<script src="{{ asset('assets/func/profile/view_prof.js') }}"></script>
	{% endblock %}